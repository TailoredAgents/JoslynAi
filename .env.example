# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL_PRIMARY=gpt-5
OPENAI_MODEL_MINI=gpt-5-mini
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# DB/Redis
DATABASE_URL=postgres://postgres:postgres@localhost:5432/joslyn_ai
REDIS_URL=redis://localhost:6379

# S3-compatible storage (S3 or R2)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=joslyn-ai
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin

# Auth
JWT_SECRET=dev-shared-secret
API_JWT_SECRET=dev-shared-secret
# For local development only; do NOT enable in production
# When set to 1 and NODE_ENV!=production, API will accept header-based auth from the web proxy
ALLOW_HEADER_AUTH=1

# Worker
JOB_MAX_RETRIES=3
JOB_RETRY_BACKOFF_SECONDS=2.0
JOB_QUEUE_LOG_INTERVAL=60

# API base for web
NEXT_PUBLIC_API_BASE_URL=/api/joslyn
NEXT_PUBLIC_ADMIN_API_KEY=dev-admin
ADMIN_API_KEY=dev-admin
INTERNAL_API_KEY=dev-internal
JOSLYN_API_ORIGIN=http://localhost:8080

# Uploads
# Maximum upload size in megabytes for multipart file uploads
MAX_UPLOAD_MB=32
