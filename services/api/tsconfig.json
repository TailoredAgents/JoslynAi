{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "noEmitOnError": true,
    "baseUrl": ".",
    "paths": {
      "@joslyn-ai/core": ["../packages/core/src/index.ts"],
      "@joslyn-ai/core/*": ["../packages/core/src/*"]
    }
  },
  "include": ["src/**/*"]
}
