{
  "name": "joslyn-ai",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:web": "pnpm --filter @joslyn-ai/web dev",
    "dev:api": "pnpm --filter @joslyn-ai/api dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "lint:ascii": "node scripts/check-ascii.mjs",
    "db:migrate": "pnpm --filter @joslyn-ai/db migrate"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ]
}

